{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "tox": {
            "type": "object",
            "properties": {
                "testenv": { "type": "string" },
                "tox_file": { "type": "string" }
            },
            "required": ["testenv"],
            "additionalProperties": false
        },
        "repo_settings": {
            "type": "object",
            "properties": {
            	"container": { "type": "string" },
                "commands": { "type": "array" },
                "tox": { "type": "string" }
            },
            "oneOf":[
                { "required": [ "commands" ]},
                { "required": [ "tox" ]}
            ],
            "additionalProperties": false,
            "dependencies": {
                "commands": ["container"]
            }
        },
        "sqa_criterion_repo": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "[a-z0-9_-]*": { "$ref": "#/definitions/repo_settings" }
            }
        },
        "sqa_criterion": {
            "type": "object",
            "minProperties": 1,
            "properties": {
                "repos": { "$ref": "#/definitions/sqa_criterion_repo" }
            },
            "required": ["repos"],
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "sqa-criteria": {
            "description": "Contains all the required SQA baseline's criteria definitions",
            "type": "object",
            "minProperties": 1,
            "properties": {
                "qc-style": { "$ref": "#/definitions/sqa_criterion" },
                "qc-coverage": { "$ref": "#/definitions/sqa_criterion" },
                "qc-functional": { "$ref": "#/definitions/sqa_criterion" },
                "qc-security": { "$ref": "#/definitions/sqa_criterion" },
                "qc-doc": { "$ref": "#/definitions/sqa_criterion" }
            },
            "additionalProperties": false
        },
        "required": [
            "sqa-criteria"
        ],
        "additionalProperties": false
    }
}
